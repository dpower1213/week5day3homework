{% extends 'base.html.j2' %}
{% block title %}
Registration
{% endblock %}

{% block content %}
    <h1>Registration</h1>
    <form action="{{url_for('registration')}}" method="post">  
    {{form.hidden_tag()}}
        <div>
        {{form.name_first.label(class="form-label")}}
        {{form.name_first(class="form-control")}}
        
        {{form.name_last.label(class="form-label")}}
        {{form.name_last(class="form-control")}}
        
        {{form.email.label(class="form-label")}}
        {{form.email(class="form-control")}}
        
        {%for error in form.email.errors %}
            <small style='color:blue;'>{{error}}</small>
        {%endfor%}<br>
        
        {{form.password.label(class="form-label")}}
        {{form.password(class="form-control")}}
        
        {{ form.confirm_password.label(class="form-label") }}
        {{ form.confirm_password(class="form-control") }}
        {% for error in form.confirm_password.errors %}
        <small style="color:red;">{{ error }}</small><br>
        {% endfor %}
        
        {{ form.submit(class="btn btn-primary") }}</form>

        </div>
    </form>
{% endblock %}